<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:padding="10dp"
        android:dividerPadding="20dp"
        android:background="@color/viewBg"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/item_picture"
            android:scaleType="fitCenter"
            style="@style/customImageView"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/divider"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_item_category"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/item_description_field"
                android:paddingStart="10dp"
                />

            <TextView
                android:id="@+id/tv_item_description"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/item_description_field"
                android:paddingStart="10dp"
                android:scrollbars = "vertical"
                />

        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/item_description_field"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:text="Choose a branch:"
            android:scrollbars = "vertical"
            />

        <Spinner
            android:id="@+id/sp_branch_to_borrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spinner_top_bottom_padding"
            android:paddingTop="@dimen/spinner_top_bottom_padding"
            android:spinnerMode="dialog"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:backgroundTint="@color/colorPrimary"/>

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_date"
            android:padding="15dp"
            android:text="@string/choose_dates"
            android:gravity="center"
            android:layout_weight="0"/>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_selected_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:padding="10dp"
            />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>